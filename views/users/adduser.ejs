<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <div class="grid">
        <%- include('partials/banner') %>
        <%- include('partials/searchbox') %>
        <%- include('partials/navbar2') %>
        <div class="content_section">
            <form action="adduser" method="post">
                <fieldset>
                    <legend> New user details</legend>
                    <p>
                        <label for="usertitle">Title: </label>
                        <select id="usertitle" name="usertitle" required>
                           <option value="Mr"> Mr</option>
                           <option value="Mrs"> Mrs</option>
                           <option value="Ms"> Ms</option>
                           <option value="Dr"> Dr</option> 
                        </select>

                        <label for="userforename">Forename: </label>
                        <input id="userforename" name="userforename" required >

                        <label for="username">Surname: </label>
                        <input id="usersurname" name="usersurname" required >

                        <label for="userAccounts">Number of Accounts</label>
                        <input 
                            id="userAccounts"
                            name="userAccounts"
                            value="1"
                            min="1"
                            max="2"
                            required
                            />
                        <label for="userDOB"> Date of Birth</label>
                        <input 
                            id="userDOB" 
                            name="userDOB" 
                            type="date" 
                            value="1970-01-01"
                            min="1910-01-01"
                            max="2010-01-01"
                            required
                            >
                        <label for="executiveAC">Executive Account</label>
                        <input
                            id="executiveAC"
                            name="executiveAC"
                            type="checkbox"
                            value="true"
                        >

                        <br /><button>Add user</button>
                    </p>

                </fieldset>
            </form>
            
        </div>
        <div class="footer_section">-----</div>
    </div>
</body>
</html>